pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "vamsikrishna212/regapp"
        BUILD_TAG = "${env.BUILD_NUMBER}"          
        CLUSTER_NAME = "my-demo-cluster"          
        REGION = "us-east-1"                      
    }

    stages {

        stage('Build') {
            steps {
                echo "Building the Java application using Maven..."
                sh 'mvn clean package'

                // Archive the WAR artifact for reference in Jenkins
                archiveArtifacts artifacts: 'webapp/target/*.war', fingerprint: true
            }
        }

        stage('Docker Build & Push') {
            steps {
                echo "Building Docker image and pushing to DockerHub..."
                sh "docker build -t ${DOCKER_IMAGE}:${BUILD_TAG} ."
                sh "docker tag ${DOCKER_IMAGE}:${BUILD_TAG} ${DOCKER_IMAGE}:latest"
                sh "docker push ${DOCKER_IMAGE}:${BUILD_TAG}"
                sh "docker push ${DOCKER_IMAGE}:latest"
            }
        }

        stage('Configure kubectl for EKS') {
            steps {
                echo "Configuring kubectl to connect to EKS cluster..."
                sh "aws eks update-kubeconfig --name ${CLUSTER_NAME} --region ${REGION}"
            }
        }

        stage('Deploy to EKS') {
            steps {
                echo "Deploying application to EKS cluster..."
                
                // Update the deployment with the new image tag
                sh "kubectl set image deployment/tomcat-regapp regapp=${DOCKER_IMAGE}:${BUILD_TAG} --record"
                
                // Apply the service YAML
                sh "kubectl apply -f service.yml"
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully! Build artifacts archived."
        }
        failure {
            echo "Pipeline failed. Please check the logs."
        }
    }
}
